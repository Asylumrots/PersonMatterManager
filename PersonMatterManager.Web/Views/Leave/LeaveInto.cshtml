    <script>
        $(function () {
            function data_string(str) {
                var d = eval('new ' + str.substr(1, str.length - 2));
                var ar_date = [d.getFullYear(), d.getMonth() + 1, d.getDate(), d.getHours(), d.getMinutes(), d.getSeconds()];
                for (var i = 0; i < ar_date.length; i++) ar_date[i] = dFormat(ar_date[i]);
                return ar_date.slice(0, 3).join('-') + ' ' + ar_date.slice(3).join(':');
                function dFormat(i) { return i < 10 ? "0" + i.toString() : i; }
            }
            $("#Leave").css("background", "#27a9e3").children("a").css("color", "white");
            $("#s2id_autogen1").css("width", "60px");
            $(".MySelect").css("display", "block");
            $("#pageSelect").css("display", "block");
            $(".select2-container").css("display", "none");
            $.ajax({
                type: "post",
                url: "/Leave/GetLeaveUser",
                success: function (data) {
                    var html;
                    if (data.length == 0) {
                        html = '<tr><td colspan="9" style="text-align:center;">暂无数据</td></tr>';
                        $("#tbodys").append(html);
                    }
                    else {
                        for (var i = 0; i < data.length; i++) {
                            var item = data[i];
                            //console.log(item.LeaveID)//45
                            var id = item.UserID;
                            var tel, name;
                            $.ajax({
                                type: "post",
                                url: "/Person/GetPersonInfobyID",
                                async: false,
                                data: { id: id },//45
                                success: function (data) {
                                    tel = data.UserTel;
                                    name = data.UserName;
                                    var leaveState, color;
                                    //console.log(item.LeaveID)//55
                                    if (item.LeaveState == '0') {
                                        leaveState = "审核中";
                                        color = "warning";
                                    }
                                    else if (item.LeaveState == '1') {
                                        leaveState = "同意";
                                        color = "success";
                                    }
                                    else if (item.LeaveState == '-1') {
                                        leaveState = "驳回";
                                        color = "important";
                                    }
                                    html = '<tr><td><div style=""><input type="checkbox" style="height:15px;width:15px;position:relative;left:7px;bottom:2px"></div></td>' +
                                        '<td style="text-align:center">' + name + '</td>' +
                                        '<td style="text-align:center">' + tel + '</td>' +
                                        '<td style="text-align:center">' + data_string(item.LeaveStartTime) + '</td>' +
                                        '<td style="text-align:center">' + data_string(item.LeaveEndTime) + '</td>' +
                                        '<td style="text-align:center">' + item.LeaveDays + '</td>' +
                                        '<td style="text-align:center">' + data_string(item.LeaveTime) + '</td>' +
                                        '<td style="text-align:center">	<span class="label label-' + color + '">' + leaveState + '</span></td>' +
                                        '<td style="text-align:center"><button class="btn btn-info btn-mini" data-toggle="modal" data-target="#SeeState" onclick="SeeLeave(' + item.LeaveID + ')"><span class="icon-search"></span>查看</button></td></tr >';
                                    $("#tbodys").append(html);
                                }
                            });

                        }
                    }
                }
            });
            
        })

        function AddLeave() {
            var formData = new FormData(document.getElementById("AddForm"));
            $.ajax({
                type: "post",
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                url: "/Leave/AddLeave",
                data: formData,
                success: function (data) {
                    $("#closeAdd").trigger("click");
                    $("#show").trigger("click");
                    if (data == "True") {
                        $("#backtxt").text("添加成功！");
                    }
                    else {
                        $("#backtxt").text("添加失败！");
                    }
                }
            });
        }
        $(function () {
            $('#AlterModal').on('hide.bs.modal', function () {
                location.reload();
            })
        });

        function DelLeave() {
            var stime = new Array();
            var etime = new Array();
            for (var i = 0; i < $("#tbodys input:checked").length; i++) {
                stime[i] = $("#tbodys input:checked").eq(i).parent().parent().next().next().next().text();
                console.log(stime[i])
            }
            for (var i = 0; i < $("#tbodys input:checked").length; i++) {
                etime[i] = $("#tbodys input:checked").eq(i).parent().parent().next().next().next().next().text();
                console.log(etime[i])
            }
            $.ajax({
                type: "post",
                url: "/Leave/DelLeave",
                data: { stime: stime, etime: etime },
                success: function (data) {
                    $("#closeDel").trigger("click");
                    $("#show").trigger("click");
                    if (data == "True") {
                        $("#backtxt").text("删除成功！");
                    }
                    else {
                        $("#backtxt").text("删除失败！");
                    }
                }
            })
        }

        function SeeLeave(id) {
            $.ajax({
                type: "post",
                url: "/Leave/GetLeaveSeeById",
                data: { id: id },
                success: function (data) {
                    var color, reason;
                    reason = data.ApproverReason;
                    if (data.LeaveState == 0) {
                        color = "warning";
                    }
                    else if (data.LeaveState == 1) {
                        color = "success";
                    }
                    else if (data.LeaveState == -1) {
                        color = "error";
                    }
                    if (data.ApproverReason == null || data.ApproverReason == "") {
                        color ="warning"
                        reason = "暂无意见";
                    }
                    var html = '<div class="alert alert-' + color + ' alert-block"><a class="close" data-dismiss="alert" href="#">×</a><h4 class="alert-heading">部门经理</h4>' + reason + '</div>';
                    $("#ApproverInfo").append(html);
                }
            })
        }
        $(function () {
            $('#SeeState').on('hide.bs.modal', function () {
                $("#ApproverInfo").empty();
            })
        });
        //关闭清空输入
        $(function () {
            $('#addUserModal').on('hide.bs.modal', function () {
                $("#DepartmentName").val();
            })
        });
    </script>
</body>
