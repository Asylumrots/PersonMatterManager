        </div>

        <!-- 模态框示例（Modal） -->
        <form method="post" action="" class="form-horizontal" role="form" id="AddForm" @*onsubmit="return AddDepartment()"*@ style="margin: 20px;">
            <div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                ×
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                申请请假
                            </h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="LeaveStartTime" class="col-sm-3 control-label">开始时间:</label>
                                    <div class="col-sm-9">
                                        <input type="datetime-local" class="form-control" id="LeaveStartTime" name="LeaveStartTime" value=""
                                               placeholder="" style="margin-left:10px;margin-top:10px">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="LeaveEndTime" class="col-sm-3 control-label">结束时间:</label>
                                    <div class="col-sm-9">
                                        <input type="datetime-local" class="form-control" id="LeaveEndTime" name="LeaveEndTime" value=""
                                               placeholder="" style="margin-left:10px;margin-top:10px">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="sexselect2" class="col-sm-3 control-label">是否半天</label>
                                    <div class="col-sm-9 MySelelct" style="height:40px;">
                                        <select id="sexselect2" name="LeaveHalfDay" class="MySelect">
                                            <option value="全天">全天</option>
                                            <option value="上午">上午</option>
                                            <option value="上午">下午</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group" style="height:40px">
                                    <label for="LeaveDays" class="col-sm-3 control-label">请假工时</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="LeaveDays" value="" id="LeaveDays"
                                               placeholder="" style="position:relative;top:10px;left:10px">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="LeaveReason" class="col-sm-3 control-label">请假原因</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control" name="LeaveReason" value="{remark}" id="LeaveReason"
                                                  placeholder="" style="position:relative;top:10px;left:10px">

                                    </textarea>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <label id="errortxt" style="display:inline-block;margin-right:37%;color:red"></label>
                            <button type="button" id="closeAdd" class="btn btn-default" data-dismiss="modal">
                                关闭
                            </button>
                            <button type="button" onclick="AddLeave()" class="btn btn-primary">
                                提交
                            </button><span id="tip"> </span>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </form>


        <!-- 模态框示例（Modal） -->
        <form method="post" action="" class="form-horizontal" role="form" id="form_data" @*onsubmit="return AddDepartment()"*@ style="margin: 20px;">
            <div class="modal fade" id="DelModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:320px;margin-left:-10%">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                ×
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                操作提示？
                            </h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="DepartmentName" class="col-sm-3 control-label">确认要删除选中项吗？</label>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <label id="errortxt" style="display:inline-block;margin-right:37%;color:red"></label>
                            <button type="button" id="closeDel" class="btn btn-default" data-dismiss="modal">
                                取消
                            </button>
                            <button type="button" onclick="DelLeave()" class="btn btn-success">
                                确认
                            </button><span id="tip"> </span>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </form>

        <button type="button" id="show" data-toggle="modal" data-target="#AlterModal" style="display:none"></button>
        <form method="post" action="" class="form-horizontal" role="form" id="s" @*onsubmit="return AddDepartment()"*@ style="margin: 20px;">
            <div class="modal fade" id="AlterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:320px;margin-left:-10%">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
